{
  "tasks": [
    // C++
    {
      "label": "C++",
      "type": "process",
      "command": "${workspaceFolder}/scripts/run-cpp.sh",
      "args": [
        "${fileDirname}",
        "${fileBasenameNoExtension}",
        "${fileExtname}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "dependsOn": ["C/C++: g++ build active file"]
    },
    {
      "label": "C++ with log",
      "type": "process",
      "command": "${workspaceFolder}/scripts/run-cpp.sh",
      "args": [
        "${fileDirname}",
        "${fileBasenameNoExtension}",
        "${fileExtname}",
        "ON"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "dependsOn": ["C/C++: g++ build active file"]
    },
    {
      "label": "C/C++: g++ build active file",
      "type": "cppbuild",
      "command": "/usr/bin/g++",
      "args": [
        "-I",
        "headers",
        "-g",
        "${file}",
        "-o",
        "bin/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
